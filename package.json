{
  "name": "kalkulator-wyceny-kuchni",
  "version": "1.0.0",
  "description": "Kalkulator wyceny mebli kuchennych â€“ desktop Windows (Electron + Vite + React)",
  "main": "electron/main.js",
  "license": "MIT",
  "author": "ARVORE",
  "scripts": {
    "dev": "concurrently -k \"cross-env VITE_DEV_SERVER=true vite\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER=true electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder --win nsis --publish never"
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.452.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "pl.arvore.kalkulatorwyceny",
    "productName": "Kalkulator Wyceny Kuchni",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "artifactName": "Kalkulator-Wyceny-Kuchni-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}